  <div class="row charts">
    <h1><%= device.name %> <a href="#" class="btn btn-sm btn-primary edit-device-scroll">Edit Industrial Sensor</a></h1>
    <div class="col-lg-4">
      <h2>Industrial Sensor Inventory (oz)</h2>
      <canvas class="col-lg-4 canvas blue" id="weight-device-<%= device.id %>"></canvas>
    </div>
    <div class="col-lg-4">
      <h2>Storage Tempature (F)</h2>
      <canvas class="col-lg-4 canvas green" id="temp-device-<%= device.id %>"></canvas>
    </div>
    <div class="col-lg-4">
      <h2>Storage Humidity (%)</h2>
      <canvas class="col-lg-4 canvas orange" id="humidity-device-<%= device.id %>"></canvas>
    </div>
  </div>
  <div class="row avgs">
    <div class="col-lg-4">
      <div class="well well-sm">
        <p class="text-muted">Average over past hour</p>
        <p class="lead"><%= avgs.weight ? avgs.weight : 'No Data' %></p>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="well well-sm">
        <p class="text-muted">Average over past hour</p>
        <p class="lead"><%= avgs.temp ? avgs.temp : 'No Data' %></p>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="well well-sm">
        <p class="text-muted">Average over past hour</p>
        <p class="lead"><%= avgs.humidity ? avgs.humidity : 'No Data' %></p>
      </div>
    </div>
  </div>
  <div class="row panels">
    <div class="col-lg-6">
      <div class="panel panel-<%= device_info.active ? 'primary' : 'danger' %>">
        <div class="panel-heading">
          <h3 class="panel-title">Device status</h3>
        </div>
        <div class="panel-body">
          <%= device_info.active ? 'ACTIVE' : 'INACTIVE' %>
        </div>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Twilio device URL </h3>
        </div>
        <div class="panel-body">
          <a href="<%= device_info.twilio_url %>" _target="blank"><%= device_info.twilio_url %></a>
        </div>
      </div>
    </div>
  </div>
  <div class="row data-usage">
    <div class="col-lg-6">
      <div class="panel panel-info">
        <div class="panel-heading">Data</div>
        <div class="panel-body">
          <table class="table table-striped table-hover ">
            <tbody>
              <tr>
                <td>Sent:</td>
                <td><%= twilio_data.data.sent ? twilio_data.data.sent : '0' %></td>
              </tr>
              <tr>
                <td>Recieved:</td>
                <td><%= twilio_data.data.sent ? twilio_data.data.sent : '0' %></td>
              </tr>
              <tr>
                <td>Total:</td>
                <td><%= twilio_data.data.total ? twilio_data.data.total : '0' %></td>
              </tr>
              <tr>
                <td>Cost:</td>
                <td>$<%= twilio_data.data.cost ? twilio_data.data.cost : '0.00' %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="panel panel-info">
        <div class="panel-heading">Commands</div>
        <div class="panel-body">
          <table class="table table-striped table-hover">
            <tbody>
              <tr>
                <td>Sent:</td>
                <td><%= twilio_data.commands.sent ? twilio_data.commands.sent : '0' %></td>
              </tr>
              <tr>
                <td>Recieved:</td>
                <td><%= twilio_data.commands.sent ? twilio_data.commands.sent : '0' %></td>
              </tr>
              <tr>
                <td>Total:</td>
                <td><%= twilio_data.commands.total ? twilio_data.commands.total : '0' %></td>
              </tr>
              <tr>
                <td>Cost:</td>
                <td>$<%= twilio_data.commands.cost ? twilio_data.commands.cost : '0.00' %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="row map">
    <div class="col-lg-8 col-lg-offset-2">
      <div id="map" data-address="<%= device.address_line + " " + device.city + " " + device.state + " " + device.zip %>"></div>
    </div>
  </div>

<div class="jumbotron">
  <div class="row edit-device">
    <div class="col-lg-8">
      <form class="form-horizontal" action="/device/<%= device.id %>/edit" method="POST">
        <fieldset>
          <legend>Edit Industrial Sensor "<%= device.name %>"</legend>
          <div class="form-group">
            <label for="name" class="col-lg-2 control-label">Name</label>
            <div class="col-lg-10">
              <input type="text" class="form-control" name="name" id="name" placeholder="Name" value="<%= device.name %>">
            </div>
          </div>

          <div class="form-group">
            <label for="twilio_sid" class="col-lg-2 control-label">Twilio SIM SID</label>
            <div class="col-lg-10">
              <input type="text" class="form-control" name="twilio_sid" id="twilio_sid" placeholder="Twilio SIM SID" value="<%= device.twilio_sid %>">
            </div>
          </div>

          <div class="form-group">
            <label for="addres_line" class="col-lg-2 control-label">Address</label>
            <div class="col-lg-10">
              <input type="text" class="form-control" name="address_line" id="address_line" placeholder="2124 Penn Ave" value="<%= device.address_line %>">
            </div>
          </div>

          <div class="form-group">
            <label for="city" class="col-lg-2 control-label">City</label>
            <div class="col-lg-7">
              <input type="text" class="form-control" id="city" name="city" placeholder="Pittsburgh" value="<%= device.city %>">
            </div>
            <label for="state" class="col-lg-1 control-label">State</label>
            <div class="col-lg-2">
              <input type="text" maxlength="2" minlength="2" class="form-control" name="state" id="state" placeholder="PA" value="<%= device.state %>">
            </div>
          </div>

          <div class="form-group">
            <label for="zip" class="col-lg-2 control-label">Zip</label>
            <div class="col-lg-10">
              <input type="text" class="form-control" name="zip" id="zip" placeholder="15222" value="<%= device.zip %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
              <button type="submit" class="btn btn-primary">Submit</button>
              <button type="reset" class="btn btn-default add-device-cancel">Cancel</button>
            </div>
          </div>
        </fieldset>
      </form>
    </div>
  </div>
</div>