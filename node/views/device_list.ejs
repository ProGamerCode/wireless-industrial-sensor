<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h1 id="tables">Industrial Sensors</h1>
    </div>

    <div class="bs-component">
      <table class="table table-striped table-hover ">
        <thead>
          <tr>
            <th>id</th>
            <th>Name</th>
            <th>Address</th>
            <th>Token</th>
            <th>Created</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
        <% devices.forEach(function(device) { %>
          <tr>
            <td><%= device.id %></td>
            <td><%= device.name %></td>
            <td><%= device.address_line +", "+ device.city +" "+ device.state +", "+ device.zip %></td>
            <td><%= device.token %></td>
            <td><%= moment(device.created_at).format('MMM DD YYYY @ mm:hh') %></td>
            <td><a href="/bean-counter/<%= device.id %>" class="btn btn-xs btn-success">Edit</a></td>
            <td><a href="/delete-device/<%= device.id %>" class="btn btn-xs btn-danger">Delete</a></td>
          </tr>
        <% }) %>
        </tbody>
      </table>
    <div id="source-button" class="btn btn-primary btn-xs" style="display: none;">&lt; &gt;</div></div><!-- /example -->
  </div>
  <div class="divider col-lg-10 bg-primary"></div>
</div>

<a href="#" class="btn btn-primary add-device-show">Add New Industrial Sensor</a>

<div class="row add-device">
  <div class="col-lg-6">
    <form class="form-horizontal" action="/add-device" method="POST">
      <fieldset>
        <legend>New Industrial Sensor</legend>
        <div class="form-group">
          <label for="name" class="col-lg-2 control-label">Name</label>
          <div class="col-lg-10">
            <input type="text" class="form-control" name="name" id="name" placeholder="Name">
          </div>
        </div>

        <div class="form-group">
          <label for="twilio_sid" class="col-lg-2 control-label">Twilio SIM Sid</label>
          <div class="col-lg-10">
            <input type="text" class="form-control" name="twilio_sid" id="twilio_sid" placeholder="Twilio SIM SID">
          </div>
        </div>

        <div class="form-group">
          <label for="addres_line" class="col-lg-2 control-label">Address</label>
          <div class="col-lg-10">
            <input type="text" class="form-control" name="address_line" id="address_line" placeholder="2124 Penn Ave">
          </div>
        </div>

        <div class="form-group">
          <label for="city" class="col-lg-2 control-label">City</label>
          <div class="col-lg-7">
            <input type="text" class="form-control" id="city" name="city" placeholder="Pittsburgh">
          </div>
          <label for="state" class="col-lg-1 control-label">State</label>
          <div class="col-lg-2">
            <input type="text" maxlength="2" minlength="2" class="form-control" name="state" id="state" placeholder="PA">
          </div>
        </div>

        <div class="form-group">
          <label for="zip" class="col-lg-2 control-label">Zip</label>
          <div class="col-lg-10">
            <input type="text" class="form-control" name="zip" id="zip" placeholder="15222">
          </div>
        </div>

        <div class="form-group">
          <div class="col-lg-10 col-lg-offset-2">
            <button type="submit" class="btn btn-primary">Submit</button>
            <button type="reset" class="btn btn-default add-device-cancel">Cancel</button>
          </div>
        </div>
      </fieldset>
    </form>
  </div>
</div>
